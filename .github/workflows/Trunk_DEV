name: Build, Test, and Conditional Revert

on: push

on:
  push:
    branches:[master]
     

jobs:
  build-and-test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: Build
        run: echo "Building the project..."
        # Replace this with your actual build command
      - name: Test
        run: echo "Running tests..."
        # Replace this with your actual test command

  revert-if-failed:
    runs-on: ubuntu-latest
    needs: build-and-test
    if: ${{ failure() && github.ref == 'refs/heads/main' }} # This job runs only if the build-and-test job failed and the push was to the main branch
    steps:
      - uses: actions/checkout@v2
        with:
          fetch-depth: 0 # Fetches all history for successful revert
      - name: Revert last commit
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          git revert --no-edit HEAD
          git push origin HEAD:main
